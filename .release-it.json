{
  "github": {
  	"release": true,
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --stdout --hide-credit --unreleased --commit-limit false --sort-commits=date-desc --ignore-commit-pattern=\"Release\\s|Merge\\s\" --starting-version $last_version --template $GITHUB_WORKSPACE/changelog.hbs"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION"
      },
      "out": {
        "file": "VERSION"
      }
    }
  }
}
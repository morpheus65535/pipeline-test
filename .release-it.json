{
  "github": {
  	"release": true,
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --starting-version ${{steps.latest_release.outputs.release}} --hide-credit --release-summary --stdout --ignore-commit-pattern=\"Release\\s|Merge\\s\" --sort-commits=date-desc --template $GITHUB_WORKSPACE/changelog.hbs"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/bumper": {
      "in": {
        "file": "VERSION"
      },
      "out": {
        "file": "VERSION"
      }
    }
  }
}
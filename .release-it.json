{
  "hooks": {},
  "git": {
    "commit": false,
    "push": false
  },
  "github": {
  	"release": true,
    "releaseName": "v${version}",
    "assets": ["VERSION"]
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  },
  "plugins": {
    "@release-it/bumper": {
      "out": {
        "file": "VERSION"
      }
    }
  }
}
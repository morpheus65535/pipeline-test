{
  "hooks": {
    "after:bump": "echo module.exports = {version: \"'\"${version}\"'\"} > $(git rev-parse --show-toplevel)/VERSION"
  },
  "git": {
    "commit": false,
    "push": false
  },
  "github": {
  	"release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  }
}
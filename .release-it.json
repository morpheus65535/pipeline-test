{
  "hooks": {
    "after:bump": "echo ${version} > release_info"
  },
  "git": {
    "commit": false,
    "push": false
  },
  "github": {
  	"release": true,
    "releaseName": "v${version}",
    "releaseNotes": "npx auto-changelog --stdout --hide-credit --unreleased --sort-commits=date-desc --ignore-commit-pattern=\"Release\\s|Merge\\s\" --starting-version $last_version --template $GITHUB_WORKSPACE/changelog.hbs $unreleased-only"
  },
  "npm": {
    "publish": false,
    "ignoreVersion": true
  }
}